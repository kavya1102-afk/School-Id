<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include layout="@layout/toolbar_layout2"
            android:id="@+id/toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Teacher &amp; Staff"
                android:textColor="#28387B"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="10dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:id="@+id/part1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="#28387B1A"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/part1">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filterBtnAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#22316C"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Filter"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/filter_icon"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    app:strokeColor="@android:color/transparent"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/assignClassTeacheBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#22316C"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Assign Class Teacher"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="5dp"
                    android:layout_marginHorizontal="5dp"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    app:strokeColor="@android:color/transparent"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addStaffBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#22316C"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:text="Add Staff"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="5dp"
                    app:icon="@drawable/add_icon"
                    app:iconGravity="textStart"
                    app:iconTint="@android:color/white"
                    app:strokeColor="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>